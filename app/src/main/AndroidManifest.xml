<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="testing.com.albumuploadtest"
    >

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:name=".application.ZSApplication"
        android:supportsRtl="false"
        >

        <activity
            android:name=".activity.MainActivity"
            android:label="Escoge tamaño del álbum"
            android:theme="@style/AppTheme"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.FolderPickerActivity"
            android:label="Escoge las fotografías"
            android:theme="@style/AppTheme"
            />

        <activity
            android:name=".activity.PicturePickerActivity"
            android:label="Escoge las fotografías"
            android:theme="@style/AppTheme"
            />

        <activity
            android:name=".activity.OrderPicturesActivity"
            android:label="Ordena las fotografías"
            android:theme="@style/AppTheme.NoActionBar"
            />

        <activity
            android:name=".activity.OrderPagesActivity"
            android:label="Previsualización de tu álbum"
            android:theme="@style/AppTheme.NoActionBar"
            />

    </application>

</manifest>