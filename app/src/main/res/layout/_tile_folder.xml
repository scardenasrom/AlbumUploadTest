<?xml version="1.0" encoding="utf-8"?>
<testing.com.albumuploadtest.view.TileFolder
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/tile_folder_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_placeholder"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black_transparent"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/spacing_medium"
        >

        <TextView
            android:id="@+id/tile_folder_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/spacing_medium"
            android:layout_toLeftOf="@+id/tile_folder_pic_count"
            android:textColor="@color/white"
            tools:text="Descargas"
            />

        <TextView
            android:id="@+id/tile_folder_pic_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            tools:text="135"
            />

    </RelativeLayout>

</testing.com.albumuploadtest.view.TileFolder>