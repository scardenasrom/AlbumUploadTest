<?xml version="1.0" encoding="utf-8"?>
<testing.com.albumuploadtest.partials.TileFolder
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/placeholderTile"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_placeholder"
        android:visibility="invisible"
        />

    <ImageView
        android:id="@+id/tile_folder_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/placeholderTile"
        android:layout_alignLeft="@+id/placeholderTile"
        android:layout_alignRight="@+id/placeholderTile"
        android:layout_alignTop="@+id/placeholderTile"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_placeholder" />

    <TextView
        android:id="@+id/tile_folder_selected_pics"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/green_circle"
        android:layout_alignRight="@+id/placeholderTile"
        android:layout_alignTop="@+id/placeholderTile"
        android:gravity="center"
        android:layout_margin="@dimen/spacing_medium"
        android:textColor="@color/white"
        android:visibility="gone"
        tools:text="4"
        tools:visibility="visible"
        />

    <TextView
        android:id="@+id/tile_folder_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tile_folder_image"
        android:layout_alignLeft="@+id/tile_folder_image"
        android:layout_alignRight="@+id/tile_folder_image"
        android:background="@color/black_transparent"
        android:padding="@dimen/spacing_medium"
        android:text="TÃ­tulo"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tile_folder_pic_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tile_folder_name"
        android:layout_alignRight="@+id/tile_folder_name"
        android:layout_alignTop="@+id/tile_folder_name"
        android:padding="@dimen/spacing_medium"
        android:text="10"
        android:textColor="@color/white" />

</testing.com.albumuploadtest.partials.TileFolder>